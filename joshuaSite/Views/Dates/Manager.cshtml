@using joshuaSite.Models
@model List<joshuaSite.Models.DateItem>

<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-8"><h2>Date <b>Details</b></h2></div>
                <div class="col-sm-4">
                    <button type="button" class="btn btn-info add-new" onclick="location.href='/dates/create'"><i class="fa fa-plus"></i> Add New</button>
                </div>
            </div>
        </div>
        
        
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Date</th>
                <th>Synopsis</th>

                <th>Actions</th>
            </tr>
            </thead>
            
            <tbody>
            
            @foreach (DateItem di in Model.OrderBy(m => m.DateTime))
            {

                <tr>
                    <td>@di.DateString</td>
                    <td>@di.Synopsis</td>
                    <td>
                        <a class="edit" title="Edit" data-toggle="tooltip"  href="/Dates/edit/@di.ID"><i class="material-icons">&#xE254;</i></a>
                        <a class="delete" title="Delete" data-toggle="tooltip" onclick="return confirm('Are you sure?');" href="/Dates/Delete/@di.ID"><i class="material-icons">&#xE872;</i></a>
                    </td>
                </tr>
            }

            </tbody>
            
        </table>
    </div>
</div>


